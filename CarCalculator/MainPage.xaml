<Page
    x:Class="CarCalculator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CarCalculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FFB3EAB6">
        <Button x:Name="trucksButton" 
                Content="Trucks" 
                HorizontalAlignment="Left" 
                Margin="139,40,0,0" 
                VerticalAlignment="Top" Height="66" Width="116" Background="#330EA5BD" Click="trucksButton_Click"/>
        <Button x:Name="carsButton" 
                Content="Cars" 
                HorizontalAlignment="Left" 
                Margin="420,40,0,0" 
                VerticalAlignment="Top" Height="66" Width="116" Background="#330EA5BD" Click="carsButton_Click"/>
        <TextBlock x:Name="trucksTextBlock" 
                   HorizontalAlignment="Left"
                   Margin="139,150,0,0" 
                   TextWrapping="Wrap" 
                   Text="0" 
                   VerticalAlignment="Top"/>
        <TextBlock x:Name="carsTextBlock" 
                   HorizontalAlignment="Left" 
                   Margin="420,150,0,0" 
                   TextWrapping="Wrap" 
                   Text="0" 
                   VerticalAlignment="Top"/>

    </Grid>
</Page>
